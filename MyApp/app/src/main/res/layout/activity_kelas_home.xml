<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thirdColor"
    tools:context=".kelas.KelasHome">
    <RelativeLayout
        android:id="@+id/layoutKelasHome"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/bg_square_round"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/ruangkelasHome"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ruangkelas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas VII A"
            android:layout_alignParentBottom="true"
            android:textSize="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/mainColor"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_warning"
            android:text="4"
            android:textSize="38sp"
            android:textColor="@color/whiteColor"
            android:textAlignment="center"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textjadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_square_round"
        android:layout_below="@+id/layoutKelasHome"
        android:text="Jadwal Pelajaran Kelas VIIA"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:textSize="16sp" />
    <RelativeLayout
        android:id="@+id/layoutKelasHome2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@+id/textjadwal"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_square_round"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senin"
                android:background="@color/mainColor"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/tv_warning_14"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_day1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="4"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_warning_4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Indonesia"
                android:layout_below="@+id/tv_day1"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/dayFiveColor"
                android:layout_toRightOf="@+id/tv_warning_14"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/v_b11"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_warning_14"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biologi"
                android:layout_below="@+id/tv_warning_14"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/v_b11"/>
            <View
                android:id="@+id/v_b12"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b11"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olahraga"
                android:layout_below="@+id/v_b11"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/v_b11"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_square_round"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selasa"
                android:background="@color/mainColor"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <View
                android:id="@+id/v_b21"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_day2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textAlignment="center"

                android:background="@drawable/bg_warning_utama" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Jawa"
                android:layout_below="@+id/tv_day2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/v_b21"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/v_b22"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b21"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fisika"
                android:layout_below="@+id/v_b21"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/v_b22"/>
            <View
                android:id="@+id/v_b23"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b22"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olahraga"
                android:layout_below="@+id/v_b22"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/v_b23"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutKelasHome3"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/whiteColor"
        android:layout_below="@+id/layoutKelasHome2"
        android:layout_marginTop="1dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_squere">

            <TextView
                android:id="@+id/tv_day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainColor"
                android:padding="2dp"
                android:text="Rabu"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_warning_31"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_day3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_warning_utama"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_day3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_warning_31"
                android:text="Bahasa Inggris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_warning_31"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/v_b31"
                android:text="IPS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_b31"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/v_b32"
                android:text="Tata Boga" />

            <View
                android:id="@+id/v_b32"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b31"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_warning_utama" />

            <View
                android:id="@+id/v_b31"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_warning_31"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_warning_utama" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_square_round">

            <TextView
                android:id="@+id/tv_day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainColor"
                android:padding="2dp"
                android:text="Selasa"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/v_b41"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_day4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_warning"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_day4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/v_b41"
                android:text="Matematika"
                android:textColor="@color/dayOneColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_b41"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/v_b42"
                android:text="Fisika" />

            <TextView
                android:id="@+id/v_b43"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/v_b42"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_warning"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/whiteColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_b42"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/v_b43"
                android:text="Olahraga"
                android:textColor="@color/dayOneColor"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_b42"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b41"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_warning_utama" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutKelasHome4"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@+id/layoutKelasHome3"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_square_round"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabu"
                android:background="@color/mainColor"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/tv_warning_51"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_day5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_warning_utama"
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Indonesia"
                android:layout_below="@+id/tv_day5"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_warning_51"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/v_b51"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_warning_51"
                android:background="@drawable/bg_warning_3"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:text="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPKN"
                android:textColor="@color/dayTwoColor"
                android:layout_below="@+id/tv_warning_51"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/v_b51"/>
            <View
                android:id="@+id/v_b52"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b51"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tata Boga"
                android:layout_below="@+id/v_b51"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/v_b52"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_square_round"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_day6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selasa"
                android:background="@color/mainColor"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/v_b61"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/tv_day6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:background="@drawable/bg_warning_utama" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematika"
                android:layout_below="@+id/tv_day6"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/v_b61"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/v_b62"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/v_b61"
                android:background="@drawable/bg_warning_utama"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biologi"
                android:layout_below="@+id/v_b61"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/v_b62"/>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>