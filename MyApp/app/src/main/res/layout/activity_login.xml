<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".Login">
    <TextView
        android:id="@+id/bg2WP11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_squere"
        android:layout_marginTop="250dp">
    </TextView>
    <ImageView
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:background="@drawable/animasilogin"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="-30dp"
        >
    </ImageView>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:background="@drawable/bg_welcome_page"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/titleSeneoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seneo"
            android:textSize="75sp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/secondColor"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:textStyle="bold">
        </TextView>
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="300dp"
            android:layout_marginTop="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_email"
            android:paddingLeft="20dp"
            android:layout_below="@+id/titleSeneoLogin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_squere"
            />
        <EditText
            android:id="@+id/editTextSekolah"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_home"
            android:paddingLeft="20dp"
            android:layout_below="@+id/editTextEmail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_squere"
            />
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/icon_password"
            android:layout_below="@+id/editTextSekolah"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bg_squere"
            />
        <EditText
            android:id="@+id/editTextRole"
            android:layout_width="130dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/icon_person"
            android:layout_below="@+id/editTextSekolah"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_squere"
            />
        <Button
            android:id="@+id/BtnToHome"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/arrow"
            android:paddingLeft="40dp"
            android:background="@drawable/bg_tombol"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextPassword"
            android:layout_marginTop="50dp"
            >
        </Button>
    </RelativeLayout>






</RelativeLayout>